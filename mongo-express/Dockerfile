ARG ME_VERSION=1.0.0
FROM mongo-express:${ME_VERSION}

LABEL maintainer="Ival <ivalrival95@gmail.com>"

ARG ME_CONFIG_MONGODB_SERVER
ARG ME_CONFIG_BASICAUTH_USERNAME
ARG ME_CONFIG_BASICAUTH_PASSWORD
ARG ME_CONFIG_MONGODB_PORT
ARG ME_CONFIG_MONGODB_ENABLE_ADMIN
ARG ME_CONFIG_MONGODB_AUTH_DATABASE
ARG ME_CONFIG_MONGODB_AUTH_USERNAME
ARG ME_CONFIG_MONGODB_AUTH_PASSWORD

ENV ME_CONFIG_MONGODB_SERVER=${ME_CONFIG_MONGODB_SERVER}
ENV ME_CONFIG_BASICAUTH_USERNAME=${ME_CONFIG_BASICAUTH_USERNAME}
ENV ME_CONFIG_BASICAUTH_PASSWORD=${ME_CONFIG_BASICAUTH_PASSWORD}
ENV ME_CONFIG_MONGODB_PORT=${ME_CONFIG_MONGODB_PORT}
ENV ME_CONFIG_MONGODB_ENABLE_ADMIN=${ME_CONFIG_MONGODB_ENABLE_ADMIN}
ENV ME_CONFIG_MONGODB_AUTH_DATABASE=${ME_CONFIG_MONGODB_AUTH_DATABASE}
ENV ME_CONFIG_MONGODB_AUTH_USERNAME=${ME_CONFIG_MONGODB_AUTH_USERNAME}
ENV ME_CONFIG_MONGODB_AUTH_PASSWORD=${ME_CONFIG_MONGODB_AUTH_PASSWORD}

EXPOSE 8081
